<?xml version="1.0"?>
<config>
    <tabs>
        <mediotype translate="label" module="mediotype_firstvisit">
            <label>Mediotype</label>
            <sort_order>100</sort_order>
        </mediotype>
    </tabs>
    <sections>
        <mediotype_firstvisit translate="label" module="mediotype_firstvisit">
            <label>First Visit Email Signup</label>
            <tab>mediotype</tab>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <firstvisit translate="label comment">
                    <label>First Visit Popup</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <block translate="label" module="cms">
                            <label>CMS Block</label>
                            <comment>The block which appears above the sign up form.  The default block shows the store logo and a short message</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>mediotype_firstvisit/system_config_source_cms_block</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </block>
                        <email_placeholder>
                            <label>Input Placeholder Text</label>
                            <comment>Text which shows in the input box for emails</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_placeholder>
                        <sign_up_button>
                            <label>Sign Up Button</label>
                            <comment>This text appears in the 'Sign Up' button</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sign_up_button>
                        <no_thanks_button>
                            <label>No Thanks Button</label>
                            <comment>This text appears in the 'No Thanks' button</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </no_thanks_button>
                    </fields>
                </firstvisit>
            </groups>
        </mediotype_firstvisit>
    </sections>
</config>
